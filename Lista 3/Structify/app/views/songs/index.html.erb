<div class="topnav">
  <%= link_to 'Home', root_path %>
  <%= link_to 'Álbums', albums_path %>
  <%= link_to 'Músicas', songs_path,  :class => "active" %>
</div>

<p id="notice"><%= notice %></p>

<h1>Músicas Disponíveis</h1>

<table>
  <thead>
  <tr>
    <th>Título</th>
    <th>Explicíta</th>
    <th>Gênero</th>
    <th>Álbum</th>
    <th colspan="7"></th>
  </tr>
  </thead>

  <tbody>
  <% @songs.each do |song| %>
    <tr>
      <td><%= song.name %></td>
      <td><%= human_boolean(song.is_explicit) %></td>
      <td><%= Genre.find(song.genre_id).descriptor %></td>
      <td><%= Album.find(song.album_id).name %></td>
      <td><%= link_to 'Detalhes', song_path(song) %></td>
      <td><%= link_to 'Editar', edit_song_path(song) %></td>
      <td><%= link_to 'Deletar', song_path(song), method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova Múscia', new_song_path,  :class => "button-1" %>